<%= stylesheet_link_tag "login", media: "all", "data-turbolinks-track" => "reload" %>

<div class="login__form">		
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2>Sign up</h2>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
          <div class="input-group">
              <%= f.email_field :email,placeholder:"Enter Email", autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
      </div>

      <div class="form-group">
          <div class="input-group">
            <%= f.text_field :username,placeholder: "Enter username..." , autocomplete: "username",autofocus: true, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
          <div class="input-group">
            <%# <% if @minimum_password_length %>
            <%# <em>(</em>
            <% end %>
            <%# <br /> %> 
            <%= f.password_field :password,placeholder: "Enter password..." , autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
          <div class="input-group">
            <%= f.password_field :password_confirmation,placeholder: "Confirm password",autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit " Sign up", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class="hint-text small">
        Already have an account? 
        <%= link_to "Log in", new_session_path(resource_name), class: "text-primary" %> 
     </div>
</div>