<%= stylesheet_link_tag "login", media: "all", "data-turbolinks-track" => "reload" %>
 
<div class="login__form">		
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= render "users/shared/error_messages", resource: resource %>
           <h2 class="text-center">Log In </h2>
           <div class="text-center social__btn">
		        	<a href="#" class="btn btn-danger btn-block"><i class="fa fa-google"></i> Sign in with <b>Google Account</b></a>
          </div>
	      	<div class="or__seperator"><i>or</i></div>
            <div class="form-group">
              <div class="input-group"> 
                  <%= f.email_field :email, placeholder: "Enter Email",autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <%= f.password_field :password, placeholder: "Enter password", autocomplete: "current-password" , class: "form-control"%>
              </div>
            </div>
           <div class="clearfix">
            <label class="pull-left checkbox-inline">
            <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
             </label>
            <% end %>
            <%= link_to "Forgot password?", new_password_path(resource_name),class:"pull-right text-primary" %>
          </div> 
          
            <div class="actions">
              <%= f.submit "Log in",  class: 'btn btn-primary' %>
            </div>
          <% end %> 
           <div class="hint-text small">
                Don't have an account? 
                 <%= link_to "Register Now", new_registration_path(resource_name), class: "text-primary" %> 
            </div>
</div>