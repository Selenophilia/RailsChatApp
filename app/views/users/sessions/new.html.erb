<%= stylesheet_link_tag "login", media: "all", "data-turbolinks-track" => "reload" %> 
<div class="login__form">		
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= render "users/shared/error_messages", resource: resource %>
          <h2> Log In </h2>
          <div class="form-group">
            <div class="input-group"> 
                <%= f.email_field :email, placeholder: "Enter Email",autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
          </div>
          <div class="form-group">
            <div class="input-group">
                <%= f.password_field :password, placeholder: "Enter password", autocomplete: "current-password" , class: "form-control"%>
            </div>
          </div>

          <div class="clearfix">
            <div class="actions">
                <%= f.submit "Log in",  class: 'btn btn-primary' %>
            </div>
          <div class="actions">
              <%= link_to "Forgot password?", new_password_path(resource_name),class:"text-primary" %>
          </div>
        </div> 
        <div class="or__seperator"><hr/></div>
          <div class="actions">
              <%= link_to "Register Now", new_registration_path(resource_name), class: "btn btn-success" %> 
          </div>
    <% end %> 
    <div class="hint-text small">
          Connect with friends and the world around you
    </div>
</div>