<div class="mb-3">
      <%= link_to new_chatroom_path, class: "btn btn-primary" do %>
        Create a room
      <% end %>


      <% if @chatrooms.present? %>
      <nav class="nav flex-column">
        <% @chatrooms.each do |chatroom| %>
                  <%= link_to chatroom.name,show_chatroom_path(chatroom) ,class: "nav-link room-nav-link" %>
        <% end %>
      </nav>
    <% else %>
      <div class="text-muted">
        The are no rooms
      </div>
    <% end %>
</div>